<script>

const box = document.getElementById("mainPage");
const halfWidth = window.innerWidth/2;
const halfHeight = window.innerHeight/2;

box.addEventListener("mousemove", (e) => {
    let offsetY = halfHeight - e.clientY;
    let offsetX = halfWidth - e.clientX;
    let distance = Math.sqrt(Math.pow(offsetX, 2) + Math.pow(offsetY, 2));

    box.style.textShadow = offsetX/20 + "px " + offsetY/20 + "px " + distance/20 + "px rgba(0, 0, 0, .15)";
});

</script>